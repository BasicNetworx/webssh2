{
    "ignorePatterns": ["**/*{.,-}min.js"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base", 
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error"],
        "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
        "no-console": ["error", { "allow": ["warn", "error"] }]
    }
}
